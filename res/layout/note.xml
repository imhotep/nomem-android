<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="#EEEE00">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:background="#EEEE00" android:layout_height="fill_parent">
		<TextView android:id="@+id/titleLabel" android:layout_width="fill_parent"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:text="@string/title_label" />
		<EditText android:id="@+id/titleId" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/bodyLabel" android:layout_width="fill_parent"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:text="@string/body_label" />
		<EditText android:id="@+id/bodyId" android:layout_width="fill_parent"
			android:gravity="top"
			android:layout_height="wrap_content"
			android:minLines="4"
			android:maxLength="2000"
			android:inputType="textAutoCorrect|textCapSentences|textMultiLine" />
		<TableRow android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<Button android:id="@+id/ok_btn" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/ok_button" />
			<Button android:id="@+id/cancel_btn" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/cancel_button" />
		</TableRow>
	</LinearLayout>
</ScrollView>